<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Options">
                  <items>
                        <Menu mnemonicParsing="false" text="Update Store">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#addBook" text="Add Book" />
                          <MenuItem mnemonicParsing="false" onAction="#addCd" text="Add CD" />
                              <MenuItem mnemonicParsing="false" text="Add DVD" />
                          </items>
                        </Menu>
                        <MenuItem mnemonicParsing="false" onAction="#viewStore" text="View Store" />
                        <MenuItem mnemonicParsing="false" onAction="#viewCart" text="View Cart" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label text="STORE" textFill="AQUA">
               <font>
                  <Font size="50.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Please enter the needed information:">
               <padding>
                  <Insets left="20.0" top="20.0" />
               </padding>
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox prefHeight="30.0" prefWidth="200.0" spacing="150.0">
               <children>
                  <Label text="Title">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label text="Category">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label text="Director">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label text="Length">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label text="Cost">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="200.0" spacing="80.0">
               <children>
                  <TextField fx:id="title">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="category" prefHeight="25.0" prefWidth="165.0" />
                  <TextField fx:id="director" prefHeight="25.0" prefWidth="154.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="length" prefHeight="25.0" prefWidth="161.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="cost" prefHeight="25.0" prefWidth="142.0">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin></TextField>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#add" prefHeight="72.0" prefWidth="87.0" text="ADD">
               <VBox.margin>
                  <Insets left="450.0" top="70.0" />
               </VBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
